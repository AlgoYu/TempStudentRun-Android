<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="355dp"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/v5"
        android:text="服务器地址："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ip"
        app:layout_constraintBottom_toTopOf="@id/v6"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/ip"
        app:layout_constraintLeft_toRightOf="@id/v5"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/v5"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v5"
        android:id="@+id/v6"
        android:text="服务器端口："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/v5"/>

    <EditText
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/port"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ip"
        app:layout_constraintBaseline_toBaselineOf="@id/v6"/>
</android.support.constraint.ConstraintLayout>
